{
  "name": "tradezy",
  "version": "1.0.0",
  "description": "B2B Wholesale Marketplace Platform",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"SERVER,CLIENT\" -c \"yellow,cyan\" \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "start:dev": "./scripts/start.sh",
    "server:build": "cd server && npm run build",
    "client:build": "cd client && npm run build",
    "clean": "rm -rf node_modules server/node_modules client/node_modules",
    "setup": "npm run install-all && cp server/.env.example server/.env"
  },
  "keywords": [
    "b2b",
    "marketplace",
    "wholesale",
    "ecommerce"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
